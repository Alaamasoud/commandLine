//* 1 *//
mkdir blank
pwd
ls
cd blank
//* 2 *//
touch greetings.txt
for i in {1..5};do echo 'Hello' >> greetings.txt;done
for i in {1..5};do cp greetings.txt $i.txt;done
cat greetings.txt

cp greetings.txt 1.txt
cp greetings.txt 2.txt
cp greetings.txt 3.txt
cp greetings.txt 4.txt
cp greetings.txt 5.txt

//* 3 *//
echo cat > pets.txt
echo dog >> pets.txt
echo hamster >> pets.txt

//* 4 *//
echo cat > command.txt
echo pwd >> command.txt
echo ls >> command.txt

//* 5 *//
grep -vf command.txt pets.txt > lovelyCommands.txt
grep -vf pets.txt command.txt >> lovelyCommands.txt
